@import '/font/iconfont.wxss';

.shopcar{background: #eee;}
.shopcar .labelNav{display: flex;justify-content: space-around;align-items: center;height:76rpx;padding:0 30rpx;font-size:22rpx;color:#8c8c8c;}
.shopcar .labelNav .item .iconfont{font-size:25rpx;margin-right:10rpx;color: #666;}
.shopcar .nav{width:100%;height:80rpx;background-color:#fff;padding:20rpx 30rpx;box-sizing:border-box;font-size:28rpx;color:#282828;}
.shopcar .nav text{color: black;font-size: 30rpx;}

.shopcar .car{padding: 10rpx 0;}
.shopcar .car .item{background: white;border-radius: 10rpx;margin: 20rpx 20rpx;display: flex;align-items: center;}
.shopcar .car .item .left{width: 200rpx;}
.shopcar .car .item .left image{width: 100%;height: 200rpx}
.shopcar .car .item .center{flex: 1}
.shopcar .car .item .center .price{color: #f30;}
.shopcar .car .item .right{width: 180rpx} 
.shopcar .car .item .right button{width: 55rpx;display: inline-block;margin: 0 auto;padding: 0;}
.shopcar .car .item .right input{border: 1rpx solid #ccc;padding:22rpx 5rpx;display: inline-block;width: 40rpx}


