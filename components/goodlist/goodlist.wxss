.goodList .item{display: flex;}
.goodList .item .pictrue{width:180rpx;height:180rpx;padding: 30rpx;}
.goodList .item .pictrue image{width:100%;height:100%;border-radius:10rpx;}
.goodList .item .underline{padding:30rpx 30rpx 30rpx 0;border-bottom:1px solid #f5f5f5;position: relative;}
.goodList .item:nth-last-child(1) .underline{border-bottom:0; }
.goodList .item .text{font-size:30rpx;color:#222;width:489rpx;}
.goodList .item .text .money{font-size:26rpx;font-weight:bold;margin-top:30rpx;}
.goodList .item .text .money .num{font-size:34rpx;}
.goodList .item .text .vip-money{font-size:24rpx;color:#282828;font-weight:bold;margin-top:15rpx;}
.goodList .item .text .vip-money .num{font-size:22rpx;color:#aaa;font-weight:normal;margin:-2rpx 0 0 22rpx;}
.goodList .item .iconfont image{position:absolute;right:30rpx;width:50rpx;height:50rpx;bottom:50rpx;}